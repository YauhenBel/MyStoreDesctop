<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import org.controlsfx.control.textfield.CustomPasswordField?>
<?import org.controlsfx.control.textfield.CustomTextField?>

<Pane maxHeight="156.0" maxWidth="250.0" prefHeight="156.0" prefWidth="250.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.Controller">
   <children>
      <VBox alignment="CENTER" layoutX="50.0" prefHeight="156.0" prefWidth="150.0">
         <children>
            <CustomTextField fx:id="tfLogin" alignment="CENTER" onAction="#logIn">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </CustomTextField>
            <CustomPasswordField fx:id="tfPassword" alignment="CENTER" onAction="#logIn">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </CustomPasswordField>
            <Button fx:id="btnInput" mnemonicParsing="false" onAction="#logIn" text="Войти">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Button>
            <Label fx:id="labelError" prefHeight="17.0" prefWidth="269.0" textAlignment="CENTER" textFill="RED" />
         </children>
      </VBox>
   </children>
</Pane>
